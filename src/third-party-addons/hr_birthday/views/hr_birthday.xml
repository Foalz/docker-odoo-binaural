<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View (read-only) -->
    <record id="view_hr_birthday_tree" model="ir.ui.view">
        <field name="name">hr.birthday.tree</field>
        <field name="model">hr.birthday</field>
        <field name="arch" type="xml">
            <tree editable="false">
                <field name="employee_id"/>
                <field name="birthday"/>
                <field name="email_sent"/>
                <field name="days_to_birthday" />
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_birthday_tree" model="ir.actions.act_window">
        <field name="name">Employee Birthdays</field>
        <field name="res_model">hr.birthday</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_hr_birthday_tree"/>
        <field name="help" type="html">
            <p>View of employee birthdays and remaining days.</p>
        </field>
    </record>

    <!-- Menuitem -->
</odoo>