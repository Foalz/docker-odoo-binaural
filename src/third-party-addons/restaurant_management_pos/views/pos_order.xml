<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_order_form_inherit_restaurant" model="ir.ui.view">
        <field name="name">pos.order.form.inherit.restaurant</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="table_id" string="Table" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="view_pos_order_tree_inherit_restaurant" model="ir.ui.view">
        <field name="name">pos.order.tree.inherit.restaurant</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='session_id']" position="after">
                <field name="table_id" string="Table"/>
            </xpath>
        </field>
    </record>
</odoo>